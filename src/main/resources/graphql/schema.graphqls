type Player {
    id: ID!
    nickname: String!
    alliance: Alliance
}

type Alliance {
    id: ID!
    name: String!
    players: [Player!]!
}

type Query {
    currentPlayer: Player
    player(playerId: ID!): Player
    alliances: [Alliance!]!
}

type Mutation {
    renameAlliance(allianceId: ID!, newName: String!): Alliance
    switchAlliance(playerId: ID!, newAllianceId: ID): Player
}